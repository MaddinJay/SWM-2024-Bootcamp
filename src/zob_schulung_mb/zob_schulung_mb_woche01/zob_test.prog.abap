REPORT zob_test.

DATA: lv_a TYPE i VALUE 1,
          lv_b TYPE i.
WHILE lv_a < 100.
   lv_a = lv_a + 1.
   IF lv_a <= 50.
      lv_b = lv_a.
   ENDIF.
ENDWHILE.

write: lv_a, lv_b.
